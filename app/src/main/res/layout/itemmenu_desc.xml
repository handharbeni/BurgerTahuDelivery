<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="@dimen/paddingitemmenu">
    <TextView
        android:textStyle="bold"
        android:textSize="@dimen/fontsizetitlemenu"
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_titlemenu"/>
    <TextView
        android:paddingTop="@dimen/paddingitemmenu"
        android:textSize="@dimen/fontsizepricemenu"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_pricemenu"/>
    <include layout="@layout/itemmenu_cartupdate" android:id="@+id/cartComponent" android:visibility="gone"/>
</LinearLayout>