<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/textBlack</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>
    <style name="AppTheme.TabStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabTextAppearance">@style/AppTheme.TabItemStyle</item>
        <item name="tabSelectedTextColor">@color/textBlack</item>
    </style>
    <style name="AppTheme.TabItemStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">6sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textBlack</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/twcen_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Italic">
        <item name="android:fontFamily">@font/twcen_italic</item>
        <item name="android:textStyle">italic</item>
    </style>


    <style name="Bold">
        <item name="android:fontFamily">@font/twcen_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:text">sans-serif</item>
    </style>

    <style name="BoldItalic">
        <item name="android:fontFamily">@font/twcen_bold_italic</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="RegularCondensed">
        <item name="android:fontFamily">@font/twcen_condensed_bold</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
